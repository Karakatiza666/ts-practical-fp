{
   "compilerOptions": {
      "target": "es2020",
      "module": "esnext",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "lib": ["ES2020", "DOM"],
      "paths": {
         "src/*" : [ "./src/*" ]
      },
   },
   "include": [
     "src/**/*"
   ],
   "tsc-alias": {
     "resolveFullPaths": true
   }
}